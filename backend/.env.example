NODE_ENV=production

# MongoDB Atlas — copy connection string from Atlas dashboard
MONGODB_URI=mongodb+srv://<user>:<password>@cluster0.xxxxx.mongodb.net/schooltripz?retryWrites=true&w=majority

# JWT — generate a strong random string (e.g. openssl rand -hex 64)
JWT_SECRET=replace_with_a_long_random_string
JWT_EXPIRES_IN=7d

# CORS — comma-separated list of allowed frontend origins
# e.g. https://schooltripz.vercel.app,http://localhost:3000
CORS_ORIGIN=https://your-app.vercel.app

# Cloudinary — get from cloudinary.com (free account)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
